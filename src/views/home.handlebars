<h2>Bienvenido {{user}}</h2>

<div class="d-flex justify-content-center align-items-center">
    {{#each products}}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">{{this.price}}$</h6>
                <p class="card-text">{{this.description}}</p>
                <button class="btn btn-outline-dark botones" data-product-id="{{this._id}}">Agregar al carrito</button>
            </div>
        </div>
    {{/each}}
</div>

<div class="d-flex justify-content-center align-items-center">
    {{#if hasPrevPage}}
        <a class="mx-4" href="/api/home?page={{prevPage}}"> Anterior </a>
    {{/if}}
    {{#if hasNextPage}}
        <a href="/api/home?page={{nextPage}}"> Siguiente </a>
    {{/if}}
</div>

<form action="/api/sessions/logout" method="POST">
    <button type="submit"> Logout </button>
</form>
<script src="/socket.io/socket.io.js"></script>
<script src="/static/assets/js/index.js"></script>



